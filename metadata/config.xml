<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC "-//OpenMRS//DTD OpenMRS Config 1.2//EN" "../lib-common/config-1.2.dtd">

<module configVersion="1.2">
	
	<!-- Base Module Properties -->
	<id>sdmxhdintegration</id>
	<name>SDMX-HD Integration Module</name>
	<version>0.6.5</version>
	<package>org.openmrs.module.@MODULE_ID@</package>
	<author>Ryan Crichton</author>
	<description>
			Allows SDMX-HD reports to be generated from SDMX-HD Data Set Definitions.
	</description>

	<activator>@MODULE_PACKAGE@.SDMXHDActivator</activator>
	
	<!-- <updateURL>https://dev.openmrs.org/modules/download/@MODULE_ID@/update.rdf</updateURL> -->
	<!-- /Base Module Properties -->
	
	<require_version>1.5.2</require_version>
	
	<require_modules>
	   	<require_module>org.openmrs.module.reporting</require_module>
	</require_modules>
	
	<!-- Extensions -->
	<extension>
		<point>org.openmrs.admin.list</point>
		<class>@MODULE_PACKAGE@.extension.html.AdminList</class>
	</extension>
	
	
	<!-- AOP
	<advice>
		<point>org.openmrs.api.FormService</point>
		<class>@MODULE_PACKAGE@.advice.DuplicateFormAdvisor</class>
	</advice>
	 /AOP -->
	
	
	<!-- Required Privileges -->
	<privilege>
		<name>Upload SDMX-HD Messages</name>
		<description>Allows the user to upload SDMX-HD Messages to the OpenMRS server</description>
	</privilege>
	
	<privilege>
		<name>Manage SDMX-HD Messages</name>
		<description>Allows the user to manage uploaded SDMX-HD files from the admin page</description>
	</privilege>
	<!-- /Required Privileges -->


	<!-- Required Global Properties -->
	<globalProperty>
		<property>@MODULE_ID@.messageUploadDir</property>
		<defaultValue></defaultValue>
		<description>
			The directory where SDMX-HD messages are uploaded to.
		</description>
	</globalProperty>
	<!-- /Required Global Properties -->
	
